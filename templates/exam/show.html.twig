{% extends 'base.html.twig' %}

{% block title %}Exam{% endblock %}
{% block breadcrumbhome %}exam{% endblock %}
{% block breadcrumbcontent %}show{% endblock %}
{% block body %}
<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                                                                <tr>
                    <th>Instruction</th>
                    <td>{{ exam.instruction }}</td>
                </tr>
                                                <tr>
                    <th>Percentage</th>
                    <td>{{ exam.percentage }}</td>
                </tr>
                                                <tr>
                    <th>Passvalue</th>
                    <td>{{ exam.passvalue }}</td>
                </tr>
                                                <tr>
                    <th>Active</th>
                    <td>{{ exam.active ? 'Yes' : 'No' }}</td>
                </tr>
                            </tbody>
        </table>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('exam_index') }}" class="btn btn-default btn-block">back to list</a>
            </div>
            <div class="col-md-2">
                <a href="{{ path('exam_edit', {'id': exam.id}) }}"
                    class="btn btn-primary btn-block">edit</a>
            </div>
            <div class="col-md-2">
                {{ include('exam/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}