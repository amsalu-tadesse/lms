{% extends 'base.html.twig' %}

{% block title %}AcademicLevel index{% endblock %}

{% block body %}
    <h1>AcademicLevel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for academic_level in academic_levels %}
            <tr>
                <td>{{ academic_level.id }}</td>
                <td>{{ academic_level.name }}</td>
                <td>{{ academic_level.description }}</td>
                <td>
                    <a href="{{ path('academic_level_show', {'id': academic_level.id}) }}">show</a>
                    <a href="{{ path('academic_level_edit', {'id': academic_level.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('academic_level_new') }}">Create new</a>
{% endblock %}
