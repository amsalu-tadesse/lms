<link href="{{asset('assets/plugins/owlCarousel/dist/assets/owl.theme.default.min.css')}}" rel="stylesheet"/>
	<style>
		a:not(.btn):hover {
			text-decoration: none;
		}
		a  .card-body p 
		{
			text-decoration: none;
			font-size: 19px;
		}
        .card-footer {
            padding: .3rem 1rem;
            display: none;
        }

