{% extends 'sBase.html.twig' %}

{% block body %}
	<h3 class="page-title">
		Course List
	</h3>
	<div class="row align-items-center">
		{% for course in student_courses %}
			<div class="col-md-4">
				<div class="card border-0 border-radius-0 ">
					<div class="card-header bg-color-grey text-1 text-uppercase">
						Progress
					</div>
					<div class="card-body">
						<h4 class="card-title mb-1 text-4 font-weight-bold">{{ course.name}}</h4>
						<p class="card-text">{{course.description}}.</p>
						<a href="/course/{{ course.id }}/chapters" class="">See Chapters >>></a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
