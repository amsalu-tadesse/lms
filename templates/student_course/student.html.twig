{% extends 'sBase.html.twig' %}
{% block stylesheet %}
	<style>
		a:not(.btn):hover {
			text-decoration: none;
		}
		a  .card-body p 
		{
			text-decoration: none;
			font-size: 19px;
		}
	</style>
{% endblock %}
{% block body %}
	<h3 class="page-title">
		Course List
	</h3>
	<div class="row align-items-center">
	{% if student_courses|length == 0 %}
		<div class="col-md-4">
				<div class="card border-0 border-radius-0 " style="height: 150px";>
					
					<div class="card-body">
						<p class="card-text">You are not selected in any course</p>
					</div>
					<div class="card-footer">
					</div>
				</div>
			</div>
	{% else %}
		{% for course in student_courses %}
			<div class="col-md-4">
				<div class="card border-0 border-radius-0 " style="height: 150px";>
					<a href="/course/{{ course.id }}/chapters">
					<div class="card-body">
						<p>
							{{ course.name }}
							<br>
							<span>By: {{ course.firstName|capitalize }} {{ course.middleName|capitalize}} </span>
						<p>
					</div>
					</a>
				</div>
			</div>
		{% endfor %}
	{% endif %}
	</div>
{% endblock %}
