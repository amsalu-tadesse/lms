{% block body %}
    <h3 class="page-title">
        My Courses
    </h3>

	<div class="row align-items-center">
    {% set array = [] %}
    {% set check = true %}

	{% if student_courses|length == 0 %}
        {% set check = false %}
        <div class="col-md-4">
            <div class="card border-0 border-radius-0 mb-3" style="height: 100px";>
                <div class="card-body">
                    <p>you didn't register for any courses yet</p>
                </div>
            </div>
        </div>
	{% else %}
    <pre>
        {{ dump(student_courses) }}
    </pre>
		{% for course in student_courses %}
            {% set id = course.id %}
            {% set array = array|merge([ id ]) %}
            {% if course.status !=0 %}
                {% set check = false %}
                <div class="col-md-4">
                    <div class="card border-0 border-radius-0 mb-3" style="height: 150px";>
                        <a href="/course/{{ course.id }}/chapters">
                        <div class="card-body">
                            <p>
                                {{ course.name }}
                                <br>
                                <span class="badge badge-info">{{ course.firstName|capitalize }} {{ course.middleName|capitalize}} </span>
                            <p>
                        </div>
                        </a>
                    </div>
                </div>
            {% endif %}
		{% endfor %}
	{% endif %}
    {% if check %}
        <div class="col-md-4">
            <div class="card border-0 border-radius-0 mb-3" style="height: 100px";>
                <div class="card-body">
                    <p>you didn't register for any courses yet</p>
                </div>
            </div>
        </div>
    {% endif %}
    
	</div>
