{% extends 'sBase.html.twig' %}

{% block body %}
	<h3 class="page-title">
		Course List
	</h3>
	<div class="row align-items-center">
	{% if student_courses|length == 0 %}
		<div class="col-md-4">
				<div class="card border-0 border-radius-0 " style="height: 271px";>
					
					<div class="card-body">
						<p class="card-text">You are not selected in any course</p>
					</div>
					<div class="card-footer">
					</div>
				</div>
			</div>
	{% else %}
		{% for course in student_courses %}
			<div class="col-md-4">
				<div class="card border-0 border-radius-0 " style="height: 271px";>
					
					<div class="card-body">
						<h4 class="card-title mb-1 text-4 font-weight-bold">{{ course.name}}</h4>
						<p class="card-text">{{course.description}}.</p>
					</div>
					<div class="card-footer">
						<a href="/course/{{ course.id }}/chapters" class="">See Chapters >>></a>
					</div>
				</div>
			</div>
		{% endfor %}
	{% endif %}
	</div>
{% endblock %}
