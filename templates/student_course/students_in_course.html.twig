{% extends 'base.html.twig' %}

{% block title %}StudentCourse index{% endblock %}
{% block breadcrumbhome %}studentcourse{% endblock %}
{% block breadcrumbcontent %}index{% endblock %}

{% block body %}

<div class="card card-info">
    <div class="card card-header">
        <div class="row">
            <div class="col-md-6">
                <h3>Students registered for course {{instructor_course.course | capitalize }} </h3>
            </div>
            <div class="col-md-6">
               <a href="{{ path('student_course_new') }}" class="btn btn-primary" style="float:right">Add new StudentCourse</a>
            </div>
        </div>
    </div>
    <div class="card card-body">
        <table class="table ">
            <thead>
                <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Registered Date</th>
                                        <th>Completion (%)</th>
                                        <th>status</th>
                                        <th>Active</th>
                                        {# <th>Is at page</th> #}
                                        <th>actions</th>
                </tr> 
            </thead>
            <tbody>
                {% for student_course in student_courses %}
                <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ student_course.student.user }}</td>
                                        <td>{{ student_course.createdAt ? student_course.createdAt| date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ student_course.id }}</td>
                                        <td>{{ student_course.status }}</td>
                                        <td>
                                        
                                        {# {{ student_course.active ? '<span class="fa fa-check-circle" style="color:green"></span>' : '<span class="fa fa-check-circle" style="color:red"></span>' }} #}
                                        
                                        <a href="#" data-toggle="modal" data-target="#modal-delete{{student_course.id}}">
        <i class="fas fa-check-circle" style='color: {{student_course.active ? 'green': 'red'}}'></i> </a>


   <div class="modal fade" id="modal-delete{{student_course.id}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-bold text-red">{{student_course.active ? 'Deactivating a record !!': 'Activating a record !!'}}</h4>
                <button type="button" class="close btn btn-primary" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
            </div>
            
                <form id="pundostudent_course_form{{student_course.id}}" action="{{path('student_course_deactivate',{id:student_course.id})}}" class="form" method="POST">
                   <div class="modal-body">
                    
                    <div class="form-group text-blue"> 
                    {% if student_course.active %}
                    Are you sure you want to diactivate {{student_course.student}} for the course {{student_course.instructorCourse.course}} ?
                    {% else %}
                     Are you sure you want to activate {{student_course.student}} for the course {{student_course.instructorCourse.course}} ?
                    {% endif %}
                    
                    </div>
                  
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>

                <button onclick="" type="submit" id="paynow" class="btn btn-success">
						<i class="fa fa-arrow-alt-circle-right m-1"></i>Yes
					</button>
            </div>
             </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div


                                        </td>
                                
                                        
                                        <td>
                       
                        {# <a
                            href="{{ path('student_course_edit', {'id': student_course.id}) }}" class="btn {{ student_course.active ? 'btn-success' : 'btn-danger' }}"> {{ student_course.active ? 'Enabled' : 'Disabled' }}</a> #}

                             <a
                            href="{{ path('student_course_show', {'id': student_course.id}) }}" class="btn btn-primary">show</a>
                       
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="  pagination justify-content-center ">
			{{ knp_pagination_render(student_courses) }}</div>

		<div class="float-right pl-5 pb-2">
			 
				Total result:
				{{ student_courses.getTotalItemCount }} 
		</div>
</div>

{% endblock %}