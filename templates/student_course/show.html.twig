{% extends 'base.html.twig' %}

{% block title %}{% trans %}StudentCourse{% endtrans %}{% endblock %}
{% block breadcrumbhome %}{% trans %}Studentcourse{% endtrans %}{% endblock %}
{% block breadcrumbcontent %}{% trans %}Show{% endtrans %}{% endblock %}
{% block body %}
<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                                                                <tr>
                    <th>{% trans %}Date{% endtrans %}</th>
                    <td>{{ student_course.createdAt ? student_course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                                                <tr>
                    <th>{% trans %}Status{% endtrans %}</th>
                    <td>{{ student_course.status }}</td>
                </tr>
                                                <tr>
                    <th>{% trans %}Active{% endtrans %}</th>
                    <td>{{ student_course.active ? 'Yes' : 'No' }}</td>
                </tr>
                                                <tr>
                    <th>{% trans %}IsAtPage{% endtrans %}</th>
                    <td>{{ student_course.isAtPage }}</td>
                </tr>
                            </tbody>
        </table>
        <br>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('student_course_index') }}" class="btn btn-default btn-block">{% trans %}Back to list{% endtrans %}</a>
            </div>
            {# <div class="col-md-2">
                <a href="{{ path('student_course_edit', {'id': student_course.id}) }}"
                    class="btn btn-primary btn-block">edit</a>
            </div> #}
            <div class="col-md-2">
                {{ include('student_course/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}