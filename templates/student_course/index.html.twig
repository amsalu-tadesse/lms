{% extends 'base.html.twig' %}

{% block title %}StudentCourse index{% endblock %}
{% block breadcrumbhome %}studentcourse{% endblock %}
{% block breadcrumbcontent %}index{% endblock %}

{% block body %}

<div class="card card-info">
    <div class="card card-header">
        <div class="row">
            <div class="col-md-6">
                <h3>StudentCourse list</h3>
            </div>
            <div class="col-md-6">
               <a href="{{ path('student_course_new') }}" class="btn btn-primary" style="float:right">Add new StudentCourse</a>
            </div>
        </div>
    </div>
    <div class="card card-body">
        <table class="table ">
            <thead>
                <tr>
                                        <th>Id</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Active</th>
                                        <th>IsAtPage</th>
                                        <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for student_course in student_courses %}
                <tr>
                                        <td>{{ student_course.id }}</td>
                                        <td>{{ student_course.date ? student_course.date|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ student_course.status }}</td>
                                        <td>{{ student_course.active ? 'Yes' : 'No' }}</td>
                                        <td>{{ student_course.isAtPage }}</td>
                                        <td>
                        <a
                            href="{{ path('student_course_show', {'id': student_course.id}) }}">show</a>
                        <a
                            href="{{ path('student_course_edit', {'id': student_course.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="  pagination justify-content-center ">
			{{ knp_pagination_render(studentcourses) }}</div>

		<div class="float-right pl-5 pb-2">
			 
				Total result:
				{{ studentcourses.getTotalItemCount }} 
		</div>
</div>

{% endblock %}