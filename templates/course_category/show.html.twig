{% extends 'base.html.twig' %}

{% block title %}{% trans %}Course Category{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Course Category{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course_category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ course_category.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ course_category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_category_index') }}">{% trans %}Back to list{% endtrans %}</a>

    <a href="{{ path('course_category_edit', {'id': course_category.id}) }}">{% trans %}Edit{% endtrans %}</a>

