{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}
	Course list

	{% endtrans %}
{% endblock %}
{% block breadcrumbhome %}
	<a href="{{ path('course_category_index') }} ">
		{% trans %}
		Course
		{% endtrans %}
	</a>
{% endblock %}
{% block breadcrumbcontent %}
	{% trans %}
	Index
	{% endtrans %}
{% endblock %}
{% block body %}


<div class="card card-info">
	<div class="card card-header">
		<div class="row">
			<div class="col-md-6">
				<h3>{% trans %}Course Categories{% endtrans %}</h3>
			</div>
			<div class="col-md-6">
				<a href="{{ path('course_category_new') }}" class="btn btn-primary" style="float:right">
					{% trans %}
					Add new Category
					{% endtrans %}
				</a>
			</div>
		</div>
	</div>
	<div class="card card-body">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>{% trans %}Name{% endtrans %}</th>
					<th>{% trans %}Description{% endtrans %}</th>
					<th>{% trans %}Action{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for course_category in course_categories %}
					<tr>
						<td>{{ course_category.id }}</td>
						<td>{{ course_category.name }}</td>
						<td>{{ course_category.description }}</td>
						<td>
							<a href="{{ path('course_category_show', {'id': course_category.id}) }}">show</a>
							<a href="{{ path('course_category_edit', {'id': course_category.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">{% trans %}No records found{% endtrans %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
</div {% endblock %}
