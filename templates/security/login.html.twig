<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>
			Log in</title>
		<!-- Tell the browser to be responsive to screen width -->
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		<!-- Font Awesome -->
		<link
		rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-free/css/all.min.css') }}">
		<!-- Ionicons -->
		<link rel="stylesheet" href="{{asset('assets/plugins/fontawesome/css/all.min.css')}}">

		<!-- icheck bootstrap -->
		<link
		rel="stylesheet" href="{{ asset('assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
		<!-- Theme style -->
		<link rel="stylesheet" href="{{ asset('assets/dist/css/adminlte.min.css') }}">
		<link
		href="{{asset('assets/plugins/fontface/OpenSans.css')}}" rel="stylesheet">
		<!-- Google Font: Source Sans Pro -->
	</head>
	<body class="hold-transition login-page" style="background-color:#007bff; border: 1px solid green;">

	{% block fullbody %}
		<div class="login-box">
			<div class="login-logo">
				<a href="/login" style="color:white">
					<b>BHU Inventory</b>
					  Management System</a>
			</div>
			{% block body %}
				<!-- /.login-logo -->
				<div class="card">
					<div class="card-body login-card-body">
						<p class="login-box-msg">Sign in to start your session</p>

						<form method="post">

							{% if error %}
								<div class="alert alert-danger alert-dismissible">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
									<h5>
										<i class="icon fas fa-ban"></i>

										{{ error.messageKey|trans(error.messageData, 'security') }}</h5>
								</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>
							{% endif %}
							<div class="input-group mb-4">
								<input type="text" class="form-control" name="username" placeholder="Username" value="{{ last_username }}">
								<div class="input-group-append">
									<div class="input-group-text">
										<span class="fa fa-user"></span>
									</div>
								</div>
							</div>
							
							<div class="input-group mb-3">
								<input type="password" class="form-control" placeholder="Password" name="password" required>
								<div class="input-group-append">
									<div class="input-group-text">
										<span class="fas fa-lock"></span>
									</div>
								</div>
							</div>
							<br/>
							<div class="row">
								{#<div class="col-8">
									<div class="icheck-primary">
										<input type="checkbox" name="_remember_me" id="remember">

										<label for="remember">
											Remember Me
										</label>
									</div>
								</div>
								#}
								<!-- /.col -->
								<div class="col-4">
									<button type="submit" class="btn btn-primary btn-block">Sign In</button>
								</div>
								<!-- /.col -->
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						</form>
						<br/>
						<div class=" float-right">

							{# <a href="{{ path("request_password_reset")}}" class="nav-link">
								<i class="fa fa-key mr-2"></i>
								forgot my password
							</a> #}
							{# <a href="#" class="btn  btn-danger float-right">
														<i class="fa fa-user-plus mr-2"></i>
														Signup
													</a> #}
						</div>

					</div>
					<!-- /.login-card-body -->
				</div>
			{% endblock %}
		</div>

	{% endblock %}
		<!-- /.login-box -->

		<!-- jQuery -->
		<script src="{{ asset('assets/plugins/jquery/jquery.min.js') }}"></script>
		<!-- Bootstrap 4 -->
		<script src="{{ asset('assets/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
		<!-- AdminLTE App -->
		<script src="{{ asset('assets/dist/js/adminlte.min.js') }}"></script>

	</body>
</html>
