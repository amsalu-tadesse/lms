{% extends "anon-base.html.twig" %}
{% block stylesheet %}
    <style>
        body{
            background-image: url('/images/lms-login4.jpg');
        }

        .login-left-text{
            margin: 50px auto;
        }

        .login-left-text p {
            max-width: 400px;
            color: white;
            font-weight: 400;
            font-size: 16px;
            font-family: poppins;
        }

        h2,h4 {
            color: white;
            line-height: 42px;
            font-weight: 700;
            font-family: "Zen antique"
        }
        .card{
            font-family: poppins;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container" style="min-height: 500px;">
        <div style=" clear: both;"></div>
        <div class="row">

            <div class="col-xs-7 col-sm-5 col-md-7">
                <div class="login-left-text">
                    <h2>Welcome Back!</h2>
                    <h4>Success together.</h4>
                    <p>
                        It is a long established fact that 
                        a reader will be distracted by the readable 
                        content of a page when looking at its layout. 
                        The point of using Lorem Ipsum is that it has a more-or-less normal 
                        distribution of letters, as opposed to using 
                        'Content here, content here', 
                        making it look like readable English.
                    </p>
                </div>
            </div>
            <div class="col-xs-5 col-sm-7 col-md-5">
                <div class="row">
                    <div class="banner hidden-xs hidden-sm">
                        <div class="card">
                            <div class="card-body login-card-body">
                                <p class="login-box-msg">Sign in to start your session</p>

                                <form method="post">

                                    {% if error %}
                                    <div class="alert alert-danger alert-dismissible">
                                       
                                            <i class="icon fas fa-ban"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                    {% endif %} {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }},
                                        <a href="{{ path( 'app_logout') }}">Logout</a>
                                    </div>
                                    {% endif %}
                                    <div class="form-group mb-4">
                                        <label> Username: *</label>
                                        <input type="text" class="form-control" name="username" placeholder="" value="{{ last_username }}">
                                    </div>

                                    <div class="form-group mb-3">
                                        <label>Password: *</label>
                                        <input type="password" class="form-control" placeholder="" name="password" required>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <!-- {#
                                        <div class="col-8">
                                            <div class="icheck-primary">
                                                <input type="checkbox" name="_remember_me" id="remember">

                                                <label for="remember">
															Remember Me
														</label>
                                            </div>
                                        </div>
                                        #} -->
                                        <div class="col-xs-12">
                                            <button type="submit" class="btn btn-primary form-control">Sign In</button>
                                        </div>
                                    </div>

                                    <div class="row mt-3 mb-2">
                                        <div class="col-xs-12">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-12">
                                                    <a class=" px-2" href="#">forgot password?</a>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <a href="{{ path('app_register')}}" style="float: right;">Create Account</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token( 'authenticate') }}">
                                </form>

                            </div>
                            <!-- /.login-card-body -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block nav %}
    <a class="nav-item btn btn-primary btn-sm" style="color:white" href="/register">Sign Up</a>
{% endblock %}