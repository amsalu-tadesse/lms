{% extends 'base.html.twig' %}

{% block title %}InstructorCourseChapter index{% endblock %}
{% block breadcrumbhome %} <a href="{{ path('instructor_course_chapter_index') }} "> My Courses </a> {% endblock %}
{% block breadcrumbcontent %}chapters{% endblock %}
{% block backbtn %}<a href="{{ path('instructor_course_chapter_index') }} " class="btn btn-info">Back to cource</a>{% endblock %}


{% block body %}
 <hr>
<div class="card card-info">
    <div class="card card-header">
        <div class="row">
            <div class="col-md-6 ">
                <h3>{{instructor_course.course | capitalize}} course chapters list</h3>
            </div>
            
            <div class="col-md-6">
               <a href="{{ path('instructor_course_chapter_new', {'id': instructor_course.id  }) }}" class="btn btn-primary" style="float:right">Add Chapter</a>
            </div>
        </div>
    </div>
   
    <div class="card card-body">
        <table class="table ">
            <thead>
                <tr>
                                        <th>Id</th>
                                        {# <th>Chapter</th> #}
                                        <th>Chapter</th>
                                        <th>Created_at</th>
                                        <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor_course_chapter in instructor_course_chapters %}
                <tr>
                                        <td>{{ instructor_course_chapter.id }}</td>
                                        {# <td>{{ instructor_course_chapter.chapter }}</td> #}
                                        <td>{{ instructor_course_chapter.topic }}</td>
                                        <td>{{ instructor_course_chapter.createdAt ? instructor_course_chapter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>

                                           <a class="btn btn-sm btn-success"
                            href="{{ path('instructor_course_chapter_edit', {'id': instructor_course_chapter.id}) }}"><span class="fa fa-edit"></span> Edit</a>
                        
                     
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}