{% extends 'base.html.twig' %}

{% block title %}User Group index
{% endblock %}

{% block breadcrumbhome %}
    <a href="{{ path('user_group_index') }} ">
	   {% trans %}User groups{% endtrans %} 
	</a> 
{% endblock %}
{% block breadcrumbcontent %}{% trans %}Index{% endtrans %}{% endblock %}
{% block body %}


	
	<div class="row">
		<div class="card col-md">

			<div class="card-body">
				<div class="row">
					<div class="col-md-12">
					{# {% if is_granted("ad_usr_grp") %} #}
						<div class="card card-info collapsed-card ">
							<div class="card-header">
								<h3 class="card-title">
									{% if edit  %}{% trans %}Edit{% endtrans %}
									{% else %}
										{% trans %}Add New{% endtrans %}{% trans %}User groups{% endtrans %} 
									{% endif %}
								</h3>

								<div class="card-tools">
									<button type="button" class="btn btn-tool" data-card-widget="collapse" id="collapse">
										<i class="fas fa-plus"></i>
									</button>
								</div>
								<!-- /.card-tools -->
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								{% if edit  %}
									{% set button_label = 'Update' %}
								{% endif %}
								{{ include('user_group/_form.html.twig') }}

							</div>
							<!-- /.card-body -->
						</div>
					{# {% endif %} #}
					</div>

					<div class="col-md-12">
						<div class="card ">
							<div class="card-header">
								<h3 class="card-title">{% trans %}User Group List{% endtrans %}</h3>
							</div>


							<div class="card-body">
								<div class="col-xs-12 col-md-12">
									{{ form_start(searchForm,{'attr': {'role':'form'}, 'method': 'GET'}) }}
										<div class="row">
											
										 
										{{ form_end(form) }}
									</div>
								<table class="table table-hover">
									<thead>
										<tr>
											<th>
												#
											</th>
											<th>{{ knp_pagination_sortable(user_groups, 'Name', 'u.name') }}</th>

											<th>{% trans %}Description{% endtrans %}</th>
											<th>{% trans %}Status{% endtrans %}</th>
											{# <th>permission</th> #}
											<th>Action</th>
										</tr>
									</thead>
									<tbody>

									 
									{% set i = 1 %}
										 {% for user_group in user_groups %}
											<tr>
												<td>
													{{ i }}
													{% set i = i+1 %}
												</td>
												<td>{{ user_group.name }}
													<span class="badge badge-primary badge-pill">
														 {{ user_group.users|length}}  users</span>
												</td>

												<td>{{ user_group.description }}</td>
												<td>
													{% if is_granted("user_group_edit") %}

														<form class="d-inline" method="post" action="{{ path('user_group_action',{'id':user_group.id})}}" onsubmit="return confirm('Are you sure you want to {{ user_group.isActive ? 'DeActivate':'Activate'|trans}} this User Group?');">
															<input name="activateUserGroup" value="{{ user_group.isActive ? 0 : 1}}" hidden>
															{{ user_group.isActive ?  '<button class="btn btn-sm badge-success">Enabled</button>': '<button class="btn btn-sm btn-danger">Disabled</button>' }}

														</form>
													 {% endif %} 
												</td>
												<td>
												 
													    <a href="{{ path('user_group_users',{'id': user_group.id})}}">manage</a>
													{# {% endif %} #}
													{% if is_granted("manage_users") %}
														<form class="d-inline" method="post">
															<input type="hidden" name="edit" value="{{user_group.id}}">
															<button class="btn btn-sm btn-info" title="Edit">
															<i class="fa fa-edit"></i>
															</button>
														</form>
													{% endif %}
													{% if is_granted("manage_users") %}
														<form class="d-inline" method="post" action="{{ path('user_group_delete', {'id': user_group.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

															<input type="hidden" name="_method" value="DELETE">
															<input
															type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_group.id) }}">
														 
															<button class="btn btn-sm btn-danger" title="Delete">
																<i class="fa fa-trash"></i>
															</button>
														</form>
													{% endif %}
												</td>

											</tr>
										{% else %}
											<tr>
												<td colspan="5">no records found</td>
											</tr>
										{% endfor %} 
									</tbody>
								</table>
								{# <div class="float-right">{{ knp_pagination_render(user_groups) }}</div> #}


							</div>
						</div>
					</div>
					<!-- /.card-body -->
				</div>
			</div>

		</div>
		<!-- /.card-body -->
	</div>

{% endblock %}
{% block javascripts %}
{% if edit %}
<script>


$(function (){
	$('#collapse').trigger('click');
})
</script>{% endif %}
{% endblock %}