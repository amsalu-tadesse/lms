{{ form_start(form,{'attr': {'role':'form'}}) }}



	<div class="form-group ">
		<label class="col-sm-5 control-label no-padding-right">{{ form_label(form.name) | trans | raw  }}</label>
		{{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group ">
		<label class="col-sm-5 control-label no-padding-right">{{ form_label(form.description)  | trans | raw  }}</label>
		{{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group">
		{% if not button_label is defined  %}
			<button class="btn btn-info">{{ button_label|default('Save') }}</button>
			<button class="btn  btn-primary " style="margin-right:20px;" type="reset">{% trans %}Reset{% endtrans %}</button>

		{% else %}
			<input type="hidden" name="edit" value="{{edit}}">
			<a href="{{ path('user_group_index') }}" class="btn btn-primary">
				{% trans %}Cancel{% endtrans %}
			</a>

			<button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
		{% endif %}
	</div>



{{ form_end(form) }}
