{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Content{% endtrans %}
	Show
{% endblock %}
{% block breadcrumbhome %}
	<a href="{{ path('content_index',{'id': incrsid}) }} ">
		{% trans %}Content{% endtrans %}
	</a>
{% endblock %}
{% block breadcrumbcontent %}
	{% trans %}Show{% endtrans %}
{% endblock %}
{% block body %}
	<div class="card card-info">
		<div class="card card-header">
			<h5>{% trans %}Content{% endtrans %}</h5>

		</div>
		<div class="card card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>#</th>
						<td>{{ content.id }}</td>
					</tr>
					<tr>
						<th>{% trans %}Chapter{% endtrans %}</th>
						<td>{{ content.chapter }}</td>
					</tr>
					<tr>
						<th>{% trans %}Title{% endtrans %}</th>
						<td>{{ content.title }}</td>
					</tr>
					<tr>
						<th>{% trans %}Content{% endtrans %}</th>
						<td>{{ content.content | raw}}</td>
					</tr>
					{% if content.filename %}
						<tr>
							<th>{% trans %}File{% endtrans %}</th>
							<td>
								<a href="{{ asset('uploads/videos/' ~ content.filename) }}">{% trans %}View file{% endtrans %}</a>
							</td>
						</tr>
					{% endif %} 

					{% if content.videoLink %}

						<tr>
							<th>{% trans %}VideoLink{% endtrans %}</th>
							<td><a href="{{ content.videoLink }}" >{% trans %}VideoLink{% endtrans %}</a></td>
						</tr>
					{% endif %}
					{% if content.resource %}

						<tr>
							<th>{% trans %}Resource{% endtrans %}</th>
							
						<td><a href="{{ asset('uploads/resources/' ~ content.resource) }}">Resource</a></td>
						</tr>
					{% endif %}

				</tbody>
			</table>

		</div>
	</div>

	<a href="{{ path('content_index',{'id': incrsid}) }}" class="btn btn-primary">{% trans %}Back to list{% endtrans %}</a>

	<a href="{{ path('content_edit', {'id': content.id}) }}" class="btn btn-info">edit</a> {{ include('content/_delete_form.html.twig') }}
{% endblock %}
