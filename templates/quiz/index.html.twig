{% extends 'base.html.twig' %}

{% block title %}
	Quiz index
{% endblock %}
{% block breadcrumbhome %}
    <a href="{{path('instructor_course_chapter_index')}}">
	   {% trans %}Quiz{% endtrans %} 
	</a> 
{% endblock %}
{% block breadcrumbcontent%}
	Index
{% endblock %}
{% block body %}

	<div class="card card-info">
		<div class="card card-header">
			{% set courseName = instructorCourse.course.name %}


		<div class="row">
				<div class="col-md-6">
					<h3> {{ courseName }} Course Quizzes</h3>
				</div>
			 <div class="col-md-6">
					<a href="{{ path('quiz_new',{id:instructorCourse.id}) }}" class="btn btn-primary" style="float:right"><span class="fa fa-plus"></span> Add Quiz</a>
				</div> 
			</div>

		</div>
		<div class="card card-body">
			<table class="table">
				<thead>
					<tr>
						<th>
							Id


						</th>
						<th>
							Chapter

						</th>
						<th>
							Quiz Name

						</th>
						<th>
							Percentage

						</th>
						<th>
							Passvalue

						</th>
						<th>
							Active

						</th>
						<th>
							actions

						</th>
					</tr>
				</thead>
				<tbody>
					{% for key, quiz in quizzes %}
						{% if quiz %}
							<tr>

								<td> {{ quiz.id }}
								</td>
								<td> {{ quiz.instructorCourseChapter.topic }}
								</td>
								<td> {{ quiz.name }}
								</td>
								<td> {{ quiz.percentage }}
								</td>
								<td> {{ quiz.passvalue }}
								</td>
								<td> {{ quiz.duration }}
								</td>
								<td> {{ quiz.active }}
								</td>
								<td>
								
									<a class="btn btn-warning" href="{{ path('quiz_edit', {'id': quiz.id}) }}"> <span class="fa fa-edit"></span>
										Edit
									</a>
									 
								<a class="btn btn-success"  href="{{ path('quiz_questions_index', {'id': quiz.id}) }}"> <span class="fa fa-plus"></span>
									Questions
								</a>
								</td>
							</tr>

						{% endif %}
					{% else %}
						<tr>
							<td colspan="6">
								no records found
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

 
{% endblock %}
