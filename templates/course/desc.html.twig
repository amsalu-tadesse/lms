<div class="card pt-3 description-card" style="padding-bottom: 80px">
	<h4 class="pt-2 pb-2" style="color:#093146">{{chapter.name}}</h4>
	<p style="margin-bottom: 40px">{{chapter.description}}</p>

	<!-- Nav tabs -->
	<ul class="nav nav-tabs" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" href="#tab1" role="tab" data-toggle="tab">{% trans %}Chapters{% endtrans %}</a>
		</li>
		{% if is_granted("ROLE_STUDENT") %}
			<li class="nav-item">
				<a class="nav-link" href="#tab3" role="tab" data-toggle="tab">Q&A</a>
			</li>
		{% endif %}

	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
		<div role="tabpanel" class="tab-pane fade show active mt-5" id="tab1">
			{% for chapter in chapters %}
				<div class="">
					<div id="accordion">
						<div class="card">
							<div class="card-header" id="heading{{chapter.id}}">
								<h5 class="mb-0">
									<button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse{{chapter.id}}" aria-expanded="false" aria-controls="collapseThree">
										{{ chapter.topic }}
									</button>
								</h5>
							</div>
							<div id="collapse{{chapter.id}}" class="collapse" aria-labelledby="heading{{chapter.id}}" data-parent="#accordion">
								<div class="card-body">
									{% for content in chapter.contents %}
										{% if content.filename != null %}
											<li>
												<i class="fas fa-play"></i>
												{{ content.title }}
											</li>
										{% elseif content.videoLink != null %}
											<li>
												<i class="fas fa-play-circle"></i>
												{{ content.title }}
											</li>
										{% elseif content.content != "" %}
											<li>
												<i class="fas fa-book"></i>
												{{ content.title }}
											</li>
										{% endif %}
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
		<div role="tabpanel" class="tab-pane fade show" id="tab3">
			<div class="comments">
				{% for que in question %}

					{% if que.student != null %}
						<div class="card bg-white mt-2 mx-3 question">
							<div class="card-body">
								<p class="meta">
									<span class="qadata">{{que.createdAt|date('d-m-Y')}}
									</span>
									{{que.student.user.username}}
								</p>
								<p class="message">{{que.question|raw}}</p>
							</div>
						</div>
					{% elseif que.instructor != null %}

						<div class="card bg-white mt-2 question-teacher mx-3">
							<div class="card-body">
								<p class="meta">
									<span class="qadata">{{que.createdAt|date('d-m-Y')}}
									</span>
									{{que.instructor.user.username}}
								</p>
								<p class="message">{{que.question|raw}}</p>
							</div>
						</div>
					{% endif %}
					{% if que.answer != null %}
						<div class="card bg-white mt-2 answer">
							<div class="card-body">
								<p class="meta">
									<span class="qadata">{{que.createdAt|date('d-m-Y')}}
									</span>
									{{que.instructor.user.username}}
								</p>
								<p class="message">{{que.answer|raw}}</p>
							</div>
							{% if que.videoAnswer != null %}
								<div
									class="card-footer">
									<!-- Modal -->
									<a type="button" style="float: left;color: #0d6fd2;background: #f1f1f1;" data-toggle="modal" onclick="playVideo('{{que.videoAnswer}}')" id="playerToggle" data-bs-toggle="modal" data-bs-target="#largeModal">
										see video ...
									</a>
								</div>
							{% endif %}
						</div>
					{% endif %}
				{% endfor %}
			</div><br>
			{% if question|length > 10 %}
				<center>
					<a href="#" id="loadMore" parameter="{{chapter.id}}">Load more ...</a>
				</center>
			{% endif %}
			{{form_start(form)}}{{form_widget(form)}}<input type="hidden" name="val1" value="{{chapter.id}}"><input type="submit" class="btn btn-primary mt-1" style="min-width: 150px">{{form_end(form)}}</div>
	</div>
</div></div>
