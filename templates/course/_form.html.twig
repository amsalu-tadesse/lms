{{ form_start(form,{'attr': {'role':'form'}}) }}



	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form.category," Course Category ") }}</label>
		{{ form_widget(form.category,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form.name," Course Name ") }}</label>
		{{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form.code," Course Code ") }}</label>
		{{ form_widget(form.code,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>

	<div class="form-group ">
		<label class="control-label no-padding-right">   {{ form_label(form.credit," Course Credit ") }}</label>
		{{ form_widget(form.credit,{'attr':{'class':'form-control'}}) }} 
		<div class="help-block with-errors"></div>
	</div>
	
		{% if not button_label is defined  %}
			<button class="btn btn-info">{{ button_label|default('Save') }}</button>
			<button class="btn  btn-warning " style="margin-right:20px;" type="reset">{% trans %}Reset{% endtrans %}</button>

		{% else %}
			<input type="hidden" name="edit" value="{{edit}}">
			<a href="{{ path('course_index') }}" class="btn btn-primary">
				Cancel
			</a>

			<button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
		{% endif %}




{{ form_end(form) }}
