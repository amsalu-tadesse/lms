{% extends 'base.html.twig' %}

{% block title %}{% trans %}User{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}User{% endtrans %}</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>{% trans %}First Name{% endtrans %}</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Middle Name{% endtrans %}</th>
                <td>{{ user.middleName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Last Name{% endtrans %}</th>
                <td>{{ user.lastName }}</td>
            </tr>
       
            <tr>
                <th>{% trans %}User Type{% endtrans %}</th>
                <td>{{ user.userType }}</td>
            </tr>

            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary">{% trans %}Back to list{% endtrans %}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">{% trans %}Edit{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
