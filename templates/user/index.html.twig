{% extends 'base.html.twig' %}

{% block title %} user index
{% endblock %}
{% block maintitle %}

	Manage users
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item active">user
	</li>
	<li class="breadcrumb-item active">user</li>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="card col-md">

			<div class="card-body">
				<div class="row">
					<div class="col-md-12">
						<div class="card card-info {{edit?'':'collapsed-card'}}"> 
							<div class="card-header">
								<h3 class="card-title">
									{% if edit  %}Edit
									{% else %}
										Add New
									{% endif %}
								</h3>

								<div class="card-tools">
									<button type="button" class="btn btn-tool" data-card-widget="collapse">
										<i class="fas {{edit?'fa-minus':'fa-plus'}}"></i>
									</button>
								</div>
								<!-- /.card-tools -->
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								{% if edit  %}
									{% set button_label = 'Update' %}
								{% endif %}
								{{ include('user/_form.html.twig') }}


							</div>
							<!-- /.card-body -->
						</div>
					</div>

					<div class="col-md-12">
						<div class="card card ">
							<div class="card-header">
								<h3 class="card-title">Items List</h3>
							</div>
							<div class="card-body">
								<div class="col-xs-12 col-md-12">
									{# {{ form_start(searchForm,{'attr': {'role':'form'}, 'method': 'GET'}) }}
										<div class="row">
											
											<div class="col-sm-2">		
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right">First Name</label>
													{{ form_widget(searchForm.firstName,{'attr':{'class':'form-control'},'full_name':'firstName','value':app.request.get('firstName') })}}
													{# <input type="text" class="form-control" name="name"/> 
													<div class="help-block with-errors"></div>
												</div>
											</div>
											<div class="col-sm-2">
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right">Middle Name</label>
													{{ form_widget(searchForm.middleName,{'attr':{'class':'form-control'},'full_name':'middleName','value': app.request.get('middleName')}) }}
													<div class="help-block with-errors"></div>
												</div>
											</div>
											<div class="col-sm-2">
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right">Last Name</label>
													{{ form_widget(searchForm.lastName,{'attr':{'class':'form-control'},'full_name':'lastName','value': app.request.get('lastName')}) }}
													<div class="help-block with-errors"></div>
												</div>
											</div>
											<div class="col-sm-2">
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right">Username</label>
													{{ form_widget(searchForm.username,{'attr':{'class':'form-control'},'full_name':'userName','value': app.request.get('userName')}) }}
													<div class="help-block with-errors"></div>
												</div>
											</div>
											<div class="col-sm-3">
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right">Department</label>
													{{ form_widget(searchForm.department,{'attr':{'class':'form-control'},'full_name':'department','value': app.request.get('department')}) }}
													<div class="help-block with-errors"></div>
												</div>
											</div>
											<div class="col-sm-1">
												<div class="form-group">
													<label class="col-sm-12 control-label no-padding-right"></label>
													<button class="btn btn-info" style="margin-top: 8px;width:100%;"><i class="fas fa-search"></i></button>
												</div>
											</div> 
										{{ form_end(searchForm) }} #}
									</div>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>First Name</th>
                                                    <th>Middle Name</th>
                                                    <th>Last Name</th>
                                                    <th>User Type</th>
                                                    <th>Department</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for user in users %}
                                                <tr>
                                                    <td>{{ user.id }}</td>
                                                    <td>{{ user.firstName }}</td>
                                                    <td>{{ user.middleName }}</td>
                                                    <td>{{ user.lastName }}</td>
                                                    <td>{{ user.userType }}</td>
                                                    <td>{{ user.department }}</td>
                                                
                                                    <td>
                                                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info btn-sm" title="Show">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <form class="d-inline" method="post">
                                                            <input type="hidden" name="edit" value="{{user.id}}">
                                                            <button class="btn btn-info btn-sm" title="Edit">
                                                                <i class="fa fa-edit"></i>
                                                            </button>
                                                        </form>
                                                        <form class="d-inline" method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <input
                                                            type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                            {#  <button type="button" data-type="confirm" class="btn btn-danger js-sweetalert" title="Delete">#}
                                                            <button class="btn btn-danger btn-sm" title="Delete">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td> 
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="5">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
								
								<div class="float-right">{{ knp_pagination_render(users) }}</div>


							</div>
						</div>
					</div>
					<!-- /.card-body -->
					<br>
					<button id="submit" class="btn btn-primary" style="display:none">Print</button>
				</div>
			</div>

		</div>
		<!-- /.card-body -->
	</div>
{% endblock %}
{% block javascripts %}
	
{% endblock%}
