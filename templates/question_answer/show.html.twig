{% extends 'base.html.twig' %}

{% block title %}QuestionAnswer
{% endblock %}

{% block breadcrumbhome %}
    <a href="{{path('question_answer_index')}}">
	   {% trans %}Q&A{% endtrans %} 
	</a> 
{% endblock %}
{% block breadcrumbcontent%}
	Show
{% endblock %}
{% block body %}
	<div class="card">
		<table class="table  table-striped">
			<tbody>
                <tr>
                    <th>Asked By</th>
                    <td>
                        {{ question_answer.student.user.firstName}}
                        {{ question_answer.student.user.middleName}}
                        {{ question_answer.student.user.lastName}}
                    </td>
				<tr>
					<th  style="width:15%">Question</th>
					<td>{{ question_answer.question }}</td>
				</tr>

				<tr>
					<th>Answer</th>
					<td>{{ question_answer.answer }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ question_answer.createdAt ? question_answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>

				<tr>
					<th>AnsweredAt</th>
					<td>{{ question_answer.createdAt ? question_answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
		<table class="table table-condensed table-responsive">
			<td>
				<a class="btn btn-success" href="{{ path('question_answer_index') }}">back to list</a>
			</td>
			<td>
				<a class="btn btn-primary" style="min-width: 150px" href="{{ path('question_answer_edit', {'id': question_answer.id}) }}">edit</a>
			</td>
            {% if question_answer.student == null %}
                <td>
                    {{ include('question_answer/_delete_form.html.twig') }}
                </td>
            {% endif %}
		</table>
	</div>
{% endblock %}
