    <style>
        body{
            font-size: 15px;
        }
        ul.nav, table td{
            font-size: 110%;
        }

        .nav-treeview .nav-item a{
            font-size: 85%;
            padding-left: 30px
        }
        .nav-icon{
            font-size: 0.9rem !important;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixe">


    <div class="wrapper">
        {% include 'master/navbar.html.twig' %} {% include 'master/sidebar.html.twig' %}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2"> 
                        <div class="col-sm-6">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                               
										{% block breadcrumbhome %}{% endblock %}
									 </li>
                                <li class="breadcrumb-item active">
                                    {% block breadcrumbcontent %}{% endblock %}
                                </li>
                                 
                            </ol>
                        </div>
                        <div class="col-sm-4 float-right">
                        </div>
                        <div class="col-sm-2 float-right-end mr-0">
                         {% block backbtn %}{% endblock %}
                        
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-md-12">

                        {% for label, messages in app.flashes %} {% for message in messages %}
                        <div class="row alert alert-{{ label }} alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <h4 class="mr-4">
                                <i class="icon fa fa-{% if label=='success' %}check {% else %}ban {% endif %}"></i> Alert!
                            </h4>
                            {{ message }}

                        </div>


                        {% endfor %} {% endfor %}

                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            {% block body %} {% endblock %}
                        </div>
                        <!--/.col (left) -->
                        <!-- right column -->
                        <div class="col-md-6"></div>
                        <!--/.col (right) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

