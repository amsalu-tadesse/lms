{% extends 'base.html.twig' %}
{% block body %}

   <div class="card card-info">
        <div class="card card-header">
        <h3 class="card-title">{% trans %}System Setting list{% endtrans %}</h3>
        </div>
        <div class="card card-body">
        
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>{% trans %}Code{% endtrans %}</th>
                {# <th>Code</th> #}
                <th>{% trans %}Value{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
              
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for system_setting in system_settings %}
            <tr>
                <td>{{ system_setting.id }}</td>
                <td>{{ system_setting.code }}</td>
                {# <td>{{ system_setting.code }}</td> #}
                <td>{{ system_setting.value }}</td>
                <td>{{ system_setting.description }}</td>
           
                <td>
                    <a href="{{ path('system_setting_edit', {'id': system_setting.id}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
        </div>



 
    {# <a href="{{ path('system_setting_new') }}">Create new</a> #}
{% endblock %}